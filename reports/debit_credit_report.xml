	<div class="container">
		<div style="display: block;">
            <div class="dc" style="width:1260px; height: 190px; border: 1px dashed black;">
                    <h6 style="margin-left:20px;">GL ENTRY</h6>
                <div class="container">
                    <div  style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 5px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 251px;
                    border: 1px dashed white;">
                        <h6>GL CODE</h6>
                        <h6 t-foreach="o.line_ids" t-as="val">
                            <h6 t-foreach="val.account_id" t-as="val2">
                                <h6 t-esc="val2.code"/>
                            </h6>
                        </h6>
                    </div>
                    <div style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 5px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 310px;
                    border: 1px dashed white;">
                        <h6>DESCRIPTION</h6>
                        <h6 t-foreach="o.line_ids" t-as="val">
                            <h6 t-foreach="val.account_id" t-as="val2">
                                <h6 t-esc="val2.name"/>
                            </h6>
                        </h6>
                    </div>
                    <div  style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 5px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 251px;
                    border: 1px dashed white;">
                        <h6>DEBIT</h6>
                         <h6 t-foreach="o.line_ids" t-as="val">
                              <t t-if="val.debit_data == 0">
                                <span>&#160;</span>
                            </t>
                            <t t-else="val.debit_data">
                                <h6 t-esc="val.debit_data" t-options='{"widget": "float", "precision": 2}'/>
                            </t>
<!--                            <t t-else="o.invoice_payment_term_id">-->
<!--                                <span>NO DATA</span>-->
<!--                            </t>-->
<!--                                <h6 t-esc="val.debit"/>-->
                        </h6>
                        <span t-esc="o.adding_usd_with_percent_value" t-options='{"widget": "float", "precision": 2}'/>
                    </div>
                    <div style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 5px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 251px;
                    border: 1px dashed white;">
                        <h6>CREDIT</h6>
                          <h6 t-foreach="o.line_ids" t-as="val">
                             <t t-if="val.credit_data == 0">
                                <span>&#160;</span>
                            </t>
                            <t t-else="val.credit_data">
                                <h6 t-esc="val.credit_data" t-options='{"widget": "float", "precision": 2}'/>
                            </t>
<!--                            <t t-else="o.invoice_payment_term_id">-->
<!--                                <span>NO DATA</span>-->
<!--                            </t>-->
<!--                                <h6 t-esc="val.debit"/>-->
                        </h6>
                        <span t-esc="o.adding_usd_with_percent_value" t-options='{"widget": "float", "precision": 2}'/>
                    </div>
                </div>
            </div>
            <div style="display: block;">
                <div class="dc" style="width:1260px; height: 135px; border: 1px dashed black;">
                    <div class="container">
                    <div  style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 2px;
                    margin-right: 2px;
                    margin-top: 70px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 251px;
                    border: 1px dashed white;">
                    </div>
                    <div style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 2px;
