                    <div  style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 70px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 251px;
                    border: 1px dashed white;">
                        <h6>CHECKED BY:</h6>
                    </div>
                    <div style="border: 1px dashed white;
                    text-align: center;
                    margin-left: 10px;
                    margin-right: 2px;
                    margin-top: 70px;
                    margin-bottom: 2px;
                    height: 145px;
                    width: 256px;
                    border: 1px dashed white;">
                        <h6>APPROVED BY:</h6>
                    </div>
                </div>
                </div>
            </div>
        </div>
	</div>
             </t>
        </template>


         <template id="debit_credit_report_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="team_accounting.debit_credit_report_container" t-lang="lang"/>
                </t>
            </t>
