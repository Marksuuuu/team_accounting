<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="team_pandl_form_view" model="ir.ui.view">
            <field name="name">team_pandl_form</field>
            <field name="model">team.pandl</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <header>
                        <button name="post_but" class="oe_highlight" string="Confirm" type="object" atts="{'invisible': [('state', 'not in', 'post')}"/>
                        <button name="confirm_but" class="btn btn-secondary" string="Print" type="object" atts="{'invisible': [('state', 'not in', 'confirm')}"/>
                        <button name="cancel_but" string="Cancel" type="object" atts="{'invisible': [('state', 'not in', 'cancel')}"/>
                        <field name="state" widget="statusbar" statusbar_visible="post,confirm,cancel"/>
                        <button type="object" name="fetch_analytic_line_data_func" string="Test"/>
                    </header>
                    <sheet>
                        <group>
                           <div class="oe_title">
                                <label for="name"/>
                                <h1>
                                    <field name="name" placeholder="Title"/>
                                </h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="profit_and_loss_date_start" widget="daterange" options="{'related_start_date': 'profit_and_loss_date_end'}"/>
                            </group>
                            <group>
                                <field name="profit_and_loss_date_end" widget="daterange" options="{'related_end_date': 'profit_and_loss_date_end'}"/>
                                <field name="fetch_analytic_line_data" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page string="Profit and Loss">
                                    <field name="connection">
                                        <tree>
                                            <field name="analytic_acc"/>
                                            <field name="debit_line_team"/>
                                            <field name="credit_line_team"/>
                                            <field name="balance_line_team"/>
<!--                                            <button string="test" type="object" name="_view_data_from_analytic_acc"/>-->
                                        </tree>
                                        <form>
                                            <group>
                                                <group>
                                                    <field name="analytic_acc"/>
                                                </group>
                                                <group>
                                                    <field name="debit_line_team"/>
                                                    <field name="credit_line_team"/>
                                                    <field name="balance_line_team"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                                <page string="Analytic Account Line">
                                    <tree>

                                    </tree>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="team_pandl_tree_view" model="ir.ui.view">
            <field name="name">team_pandl_tree</field>
            <field name="model">team.pandl</field>
            <field name="arch" type="xml">
                <tree string="Tree">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="team_pandl_line_view_form" model="ir.ui.view">
            <field name="name">team_pandl_view_form</field>
            <field name="model">team.pandl.line</field>
            <field name="arch" type="xml">
                <form string="Team Proft and Loss Line">
                    <sheet>
                        <group>
<!--                           <field name="fetch_analytic_line_data" invisible="1"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="team_pandl_line_view_tree" model="ir.ui.view">
            <field name="name">team_pandl_line_view_tree</field>
            <field name="model">team.pandl.line</field>
            <field name="arch" type="xml">
                <tree string="Team Profit and Loss Line">
<!--                    <field name="fetch_analytic_line_data" invisible="1"/>-->
                </tree>
            </field>
        </record>

         <record id="sequence_profit_loss" model="ir.sequence">
           <field name="name">Profit and Loss</field>
           <field name="code">team.pandl</field>
           <field name="active">TRUE</field>
           <field name="prefix">P&amp;L - </field>
           <field name="padding">5</field>
           <field name="number_next">1</field>
           <field name="number_increment">1</field>
        </record>


        <!-- This Menu Item Must have a parent -->

    </data>
</odoo>